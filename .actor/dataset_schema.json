{
    "actorSpecification": 1,
    "fields": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "description": "The title of the product."
            },
            "brand": {
                "type": "string",
                "description": "The brand of the product.",
                "nullable": true
            },
            "stars": {
                "type": "number",
                "format": "float",
                "description": "The rating of the product.",
                "nullable": true
            },
            "description": {
                "type": "string",
                "description": "The description of the product.",
                "nullable": true
            },
            "price": {
                "type": "object",
                "description": "The price of the product.",
                "nullable": true,
                "properties": {
                    "value": {
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "currency": {
                        "type": "string",
                        "description": "The currency of the product.",
                        "nullable": true
                    }
                }
            },
            "url": {
                "type": "string",
                "format": "uri",
                "description": "The URL of the product.",
                "nullable": true
            },
            "response": {
                "type": "string",
                "description": "The response of the agent."
            }
        },
        "required": ["title", "response"]
    },
    "views": {
        "overview": {
            "title": "Overview",
            "transformation": {
                "fields": [
                    "title",
                    "brand",
                    "stars",
                    "description",
                    "url",
                    "price"
                ],
                "omit": ["response"]
            }
        }
    }
}
